def renderItem(item)
  <li class=item.type || 'none'
      id="id-%" % (item.id || 'no-id')>
    item.name
  </li>
end

def renderList(list)
  <ul>
  for item in list: renderItem(item)
  </ul>
end

<html>
  <head>
    <title>"a static title"</title>
    <!-- this is a comment -->
  </head>
  <body>
    "this is a list with % items" % list.length
    renderList(list)
  </body>
</html>
