def renderList(people)
  <ul>
  for person in people, brother in person.brothers
    renderItem(person, brother)
  end
  </ul>
end

def renderItem(person, brother)
  <li>"%2 is the brother of %1" % (brother, person.name)</li>
end

<html>
  <head>
    <title>title</title>
    <!-- this is a comment -->
  </head>
  <body>
    "There are % stooges" % people.length
    renderList(people)
  </body>
</html>
